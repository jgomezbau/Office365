{
  "name": "Microsoft365Copilot",
  "version": "2.0.0",
  "description": "Aplicaci√≥n de escritorio moderna para Microsoft 365 Copilot",
  "author": "Juan Bau <jgomezbau@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "linux": "electron-builder --linux AppImage"
  },
  "build": {
    "appId": "Microsoft-365-Copilot",
    "productName": "Microsoft 365 Copilot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "icons/**/*",
      "config.xml"
    ],
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "icons/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.0",
    "electron-store": "^8.1.0"
  }
}
