{
    "name": "Microsoft365Copilot",
    "version": "1.0.0",
    "description": "Aplicaci√≥n de escritorio para Microsoft 365 Copilot",
    "author": "Juan Bau <jgomezbau@gmail.com>",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "Microsoft-365-Copilot",
      "productName": "Microsoft 365 Copilot",
      "directories": {
        "output": "dist"
      },
      "files": [
        "main.js",
        "src/**/*",
        "icons/**/*",
        "config.xml"
      ],
      "linux": {
        "target": [
          "AppImage",
          "tar.gz"
        ],
        "icon": "icons/icon.png"
      }
    },
    "devDependencies": {
      "electron": "^27.0.0",
      "electron-builder": "^25.1.8"
    },
    "dependencies": {
      "fast-xml-parser": "^4.3.0"
    }
  }
